@import '../../Vars.stylus'
.swapContainerStyle {
  z-index: 10;
  border-radius: 16px;
  background-color: white;
  padding: 26px;
  box-shadow: 4px 4px 32px rgba(140, 140, 140, 0.25);

}

.tokenInfoRow {
  border-radius: 20px; 
  height: 62px;
  display: flex;
  justify-content: space-between;
  width: 100%;
  background-color: transparent;
  -webkit-font-smoothing: antialiased;
  -webkit-tap-highlight-color: transparent;
  cursor: pointer;
  transition: all 0.8s ease;
  outline: none;

  &:hover {
    background-color: rgba(255,114,110,.10);
  }

  &:disabled {
    color: #848484;
    background-color: transparent;
    cursor: default;
  }
}

.tokenInfoItemsLeft {
  padding-left: 5px;
  align-items: center;
  display: flex;

  * {
    margin-left: 5px;
  }
}

.tokenInfoItemsRight {
  padding-right: 10px;
  align-items: center;
  margin: revert;
}

input {
  text-overflow: ellipsis;
}

.withdrawLiquiditySearch {
  flex: 1;
  border-radius: 20px;
  border: 1px solid rgb(237, 238, 242);
  width: 100%;
  padding: 12px;
  font-size: 14px;
  outline: none;
  margin-bottom: 0.2em;

  &:focus {
    border: 1px solid rgba(0, 191, 255, 0.9);
  }
}
.additionalInfo_container{
  margin-top: -2rem;
  border-bottom-left-radius:  20px;
  border-bottom-right-radius:  20px;
  background-color:  rgba(255, 255, 255, 0.4);
  padding: calc(16px + 2rem) 2rem 1rem 2rem;
  display: flex;
  flex-direction: column;

  .subcontainer{
    display: flex;
    width: 100%
    justify-content: space-between;
    padding: .5rem 0;
    font-family: Poppins,Arial, Helvetica, sans-serif;
    color:#1B1B1B;
      size: 16px;
    &>span{
      font-weight: 400;
    }
    &>strong{
      font-weight: 600;
    }
  }
}

.spin {
  -webkit-animation-name: spin;
  -webkit-animation-duration: 1500ms;
  -webkit-animation-iteration-count: infinite;
  -webkit-animation-timing-function: ease-in-out;

  -moz-animation-name: spin;
  -moz-animation-duration: 1500ms;
  -moz-animation-iteration-count: infinite;
  -moz-animation-timing-function: ease-in-out;

  -ms-animation-name: spin;
  -ms-animation-duration: 1500ms;
  -ms-animation-iteration-count: infinite;
  -ms-animation-timing-function: ease-in-out;

  animation-name: spin;
  animation-duration: 1500ms;
  animation-iteration-count: infinite;
  animation-timing-function: ease-in-out;

  @-ms-keyframes spin { 
      80%,100% { 
        -ms-transform: rotate(360deg); 
      }
  }
  @-moz-keyframes spin { 
      80%,100%{ 
        -moz-transform: rotate(360deg); 
      }
  }
  @-webkit-keyframes spin { 
      80%,100% { 
        -webkit-transform: rotate(360deg); 
      }
  }
  @keyframes spin { 
      80%,100% { 
        transform: rotate(360deg); 
      }
  }
}