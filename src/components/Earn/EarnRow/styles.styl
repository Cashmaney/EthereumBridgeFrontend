.accordion {
  max-width: calc(100vw - 24px);
  min-width: 1168px;
  border: none;
  box-shadow: 0px 2px 4px -2px rgba(24, 39, 75, 0.12), 0px 4px 4px -2px rgba(24, 39, 75, 0.08);
  margin: 13px 0;
  position: relative;
  border-radius: 16px;
  background-color: #ffffff;
}

.accordionHaveDeposit {
  @extend .accordion;
}

.assetRow {
  width: 100%;
  height: calc(100% - 48px);
  flex: available;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  padding:  26px 42px 26px 42px !important;
}

.assetIcon {
  width: 100px;
  height: 40px;
  margin-right: 24px;
  display: flex;
  flex-direction: row;
  img{
    margin: 0 5px;
  }
}

.title_content__center{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
}
.title_item__container {
  display: flex;
  align-items: center;
  padding: 0 26px;
}

.totalRewards {
  width: 200px;
  margin-right: 24px;
}

.apy {
  width: 300px;
  margin-right: 24px;
}

.availableDeposit {
  display: block;
  flex: auto;
  margin-right: 24px;
}

.content2 {
  flex: 1;
  display: flex;
  padding: 0 24px 30px 24px;
  margin: 0;
}

.changeBalance {
  flex: 1;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: flex-end;
  margin: 0;
}
.deposit_content{
  width: 100%;
}
.claimBox {
  display: flex;
  justify-content: flex-end; 
  background: white;
  padding: 16px; 
  border-radius: 8px;
  align-items: center;
}

.balanceRow {
  width: 100%;
  text-align: right;
  overflow: hidden;
  margin-bottom: 8px;
}

.balanceInput {
  width: 100%;
  padding: 0px 0px 12px 0px;
  display: flex;
  // transition box-shadow 300ms cubic-bezier(0.4, 0, 0.2, 1) 0ms
}

.form {
  position: relative;
  padding-bottom: 12px;
  width: 100%;
  color: #212529;
  // transition box-shadow 300ms cubic-bezier(0.4, 0, 0.2, 1) 0ms
}

.h4 {
  font-size: 16px;
  font-family: 'Roboto', BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol';
  font-weight: 400;
  line-height: 1.2;
  -webkit-font-smoothing: antialiased;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  float: right;
  color:#0D1017;
}

.h3 {
  padding-right: 24px;
}
.content{
  background: #FCF9F3;
   padding:  26px 42px 26px 42px !important;
}
.amountRow {
  min-width: 10px;
  padding-bottom: 1rem;
  .button{
    color:#5F5F6B;
  }
}
.claim_label{
  border: 1px solid #DEDEDE;
  box-sizing: border-box;
  border-radius: 4px;
  padding: 8.5px 8px;
  margin-top: 0.3em;
  margin-right: 1rem;
  font-family: 'Poppins',Arial, Helvetica, sans-serif;
  color: #DEDEDE;
  font-size: 22px;
  font-weight: 600;
  strong{
    color: #0D1017;
    margin: 0 .5rem
  }
}

.button {
  border-radius: 4px;
  font-weight: 400;
  // width 100%
  color: white !important;
  white-space: nowrap;
  -webkit-font-smoothing: antialiased;
  -webkit-tap-highlight-color: transparent;
  // border 1px solid rgba(47, 128, 237, 0.5)
  background: #0D1017 !important;
  cursor: pointer;
  transition: all 0.8s ease;
  outline: none;
  padding: 0 1.5em !important;
  margin-top: 0.3em !important;
  padding: 11px 20px !important;

  &:hover {
    background-color:rgba(13, 16, 23, .9);
  }

  &:disabled {
    // border 1px solid #848484
    background-color: transparent;
    cursor: default;
  }
}

.amountButton {
  border-radius: 15px;
  transition: all 0.8s ease;

  &:hover {
    background-color: rgba(255, 114, 110, .2);
  }
}
.title{
  font-size: 16px;
  font-family: 'Poppins', BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol';
  font-weight: 600;
  color:#0D1017;
  text-align: left;
}
.subtitle {
  font-size: 16px;
  font-family: 'Roboto', BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol';
  font-weight: 400;
  line-height: 1.2;
  -webkit-font-smoothing: antialiased;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  float: left;
  color:#0D1017;
}
