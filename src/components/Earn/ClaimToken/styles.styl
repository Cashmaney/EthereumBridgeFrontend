.itemToken {

  padding-top 30px
}

.button {
  border-radius 15px
  height 48px
  font-weight 400
  //width 100%
  color #000000
  width 150px
  background-color transparent
  -webkit-font-smoothing antialiased
  -webkit-tap-highlight-color transparent
  // border 1px solid rgba(47, 128, 237, 0.5)
  box-shadow 0 0 0.1rem rgba(0, 0, 0, 0.1)
  cursor pointer;
  transition all 0.8s ease;
  outline none;
  &:hover {
    background-color rgba(47, 128, 237, 0.2)
  }
  margin 10px

  &:disabled {
    // border 1px solid #848484
    background-color #82c8fc
    color #010000
    cursor default
  }

}

.tokenInfoRow {
  border-radius: 20px;
  height: 62px;
  // font-weight 500
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  // color #2F80ED
  background-color: transparent;
  -webkit-font-smoothing: antialiased;
  -webkit-tap-highlight-color: transparent;
  // border 1px solid rgba(47, 128, 237, 0.5)
  // box-shadow 0 0 0.5rem rgba(0, 0, 0, 0.3)
  cursor: pointer;
  transition: all 0.8s ease;
  outline: none;

  &:hover {
    background-color: rgba(0, 191, 255, 0.1);
  }

  &:disabled {
    color: #848484;
    // border 1px solid #848484
    background-color: transparent;
    cursor: default;
  }
}


.tokenInfoItemsLeft {
  padding-left: 5px;
  align-items: center;
  display: flex;

  * {
    margin-left: 5px;
  }
}

.tokenInfoItemsRight {
  padding-right: 10px;
  align-items: center;
  margin: revert;
}
