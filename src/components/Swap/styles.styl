.button {
  border-radius 50px
  height 47px
  font-weight 500
  width 100%
  color #2F80ED
  background-color transparent
  -webkit-font-smoothing antialiased
  -webkit-tap-highlight-color transparent
  // border 1px solid rgba(47, 128, 237, 0.5)
  box-shadow 0 0 0.5rem rgba(0, 0, 0, 0.3)
  cursor pointer;
  transition all 0.8s ease;
  outline none;
  &:hover {
    background-color rgba(47, 128, 237, 0.2)
  }

  &:disabled {
    color #848484;
    // border 1px solid #848484
    background-color transparent
    cursor default
  }
}

.ripple {
  position: relative;
  overflow: hidden;
  transform: translate3d(0, 0, 0);

  &:after {
    content: "";
    display: block;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    pointer-events: none;
    background-image: radial-gradient(circle, #2F80ED 10%, transparent 10.01%);
    background-repeat: no-repeat;
    background-position: 50%;
    transform: scale(10,10);
    opacity: 0;
    transition: transform .5s, opacity 1s;
  }

  &:active:after {
    transform: scale(0,0);
    opacity: .2;
    transition: 0s;
  }
}

