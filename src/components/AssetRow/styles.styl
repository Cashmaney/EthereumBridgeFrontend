.accordion {
  max-width calc(100vw - 24px)
  width 100%
  border 1px solid rgba(25, 101, 233, 0.5)
  margin 8px 0
  position relative
  border-radius 50px
  background-color #ffffff
  padding: 30px 42px;
}

.assetRow {
  flex available
  display flex
  flex-wrap nowrap
  align-items center
}

.assetIcon {
  width 40px
  height 40px
  margin-right 24px
}

.assetName {
  width 350px
  display flex
  align-items center
}

.totalRewards {
  width 340px
}

.availableDeposit {
  display block
  flex auto
}

.content2 {
  flex 1
  display flex
  padding 0 24px 30px 24px

  margin 0
}

.changeBalance {
  flex: 1;
  display: flex;
  align-items: center;
  flex-direction: column;
  margin 0
}

.claimBox {
  flex: 1;
  display: flex;
  align-items: center;
  flex-direction: column;
  align-self center

  .items {
    margin 1rem
  }
}

.balanceRow {
  width: 100%;
  cursor: pointer;
  text-align: right;
  padding-right: 20px;
}

.balanceInput {
  width 100%
  padding 0px 0px 12px 0px
  display flex
  //transition box-shadow 300ms cubic-bezier(0.4, 0, 0.2, 1) 0ms
}

.form {
  position relative
  padding-bottom 12px
  width 100%
  color #212529
  //transition box-shadow 300ms cubic-bezier(0.4, 0, 0.2, 1) 0ms
}

.h4 {
  font-size: 16px;
  font-family: "Work Sans Thin",BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol";
  font-weight: 600;
  line-height: 1.2;
  -webkit-font-smoothing: antialiased;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.h3 {
  padding-right: 24px;
}

.amountRow {
  min-width 10px
  padding-bottom 1rem
}
