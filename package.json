{
  "name": "ethhmy-bridge.frontend",
  "version": "0.0.2",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --config config/webpack.config.js",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --config config/webpack.config.js --progress --colors --open",
    "build": "NODE_ENV=production node scripts/build.js --stats",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:debug": "jest --config=jest.config.debug.js",
    "version": "echo $npm_package_version"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/harmony-one/ethhmy-bridge.frontend"
  },
  "dependencies": {
    "@harmony-js/core": "^0.1.55",
    "@metamask/detect-provider": "^1.1.0",
    "@types/react-outside-click-handler": "^1.3.0",
    "bignumber.js": "^9.0.1",
    "async-validator": "3.4.0",
    "classnames": "^2.2.6",
    "core-decorators": "^0.20.0",
    "eth-sig-util": "^2.5.3",
    "ethjs": "^0.4.0",
    "grommet": "^2.15.0",
    "lodash": "^4.17.20",
    "mobx": "6.0.1",
    "mobx-react": "7.0.0",
    "mobx-react-router": "4.1.0",
    "moment": "^2.29.0",
    "query-string": "^6.13.5",
    "rc-tooltip": "^4.2.3",
    "react": "16.13.1",
    "react-cookie-banner": "^4.1.0",
    "react-dom": "16.13.1",
    "react-in-viewport": "^1.0.0-alpha.14",
    "react-outside-click-handler": "^1.3.0",
    "react-router": "5.2.0",
    "react-router-dom": "5.2.0",
    "react-scrollbars-custom": "^4.0.25",
    "react-select": "^3.1.0",
    "react-switch": "^5.0.1",
    "superagent": "^6.1.0",
    "tslib": "^2.0.1",
    "web3": "1.3.0",
    "rc-table": "^7.10.0"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.10",
    "@types/jest": "^26.0.14",
    "@types/lodash": "^4.14.161",
    "@types/react": "16.9.51",
    "@types/react-dom": "16.9.8",
    "@types/react-router-dom": "5.1.5",
    "@types/recharts": "^1.8.16",
    "@types/styled-components": "^5.1.3",
    "@types/webpack-dev-server": "3.11.0",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-eslint": "^10.1.0",
    "babel-preset-react-app": "^9.1.2",
    "case-sensitive-paths-webpack-plugin": "2.3.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.2.0",
    "cross-env": "^7.0.2",
    "css-loader": "4.3.0",
    "dotenv": "8.2.0",
    "dotenv-expand": "5.1.0",
    "eslint": "^7.10.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.3",
    "eslint-plugin-react-hooks": "^4.1.2",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "^6.1.0",
    "fork-ts-checker-webpack-plugin": "^5.2.0",
    "fs-extra": "^9.0.1",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.0",
    "jest": "26.5.0",
    "lint-staged": "^10.4.0",
    "mini-css-extract-plugin": "^0.11.3",
    "node-sass": "^4.14.1",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "prettier": "^2.1.2",
    "raf": "^3.4.1",
    "react-dev-utils": "^10.2.1",
    "react-hot-loader": "^4.13.0",
    "resolve": "1.17.0",
    "sass-loader": "^10.0.2",
    "source-map-loader": "1.1.0",
    "style-loader": "^1.3.0",
    "styled-components": "^5.2.0",
    "stylus": "0.54.8",
    "stylus-loader": "4.1.0",
    "sw-precache-webpack-plugin": "1.0.0",
    "ts-jest": "26.4.1",
    "ts-loader": "^8.0.4",
    "ts-node": "9.0.0",
    "tsconfig-paths-webpack-plugin": "3.3.0",
    "typedoc": "^0.19.2",
    "typescript": "4.0.3",
    "url-loader": "4.1.0",
    "webpack": "^4.44.2",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-manifest-plugin": "^2.2.0",
    "whatwg-fetch": "^3.4.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!**/*.d.ts"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/**/*.(spec|test).(j|t)s?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
    ],
    "moduleFileExtensions": [
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "web.js",
      "js",
      "web.jsx",
      "jsx",
      "json",
      "node",
      "mjs"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.test.json"
      }
    },
    "moduleNameMapper": {
      "^src(.*)$": "<rootDir>/src/$1",
      "^components(.*)$": "<rootDir>/src/components/$1",
      "^constants(.*)$": "<rootDir>/src/constants/$1",
      "^contexts(.*)$": "<rootDir>/src/contexts/$1",
      "^models(.*)$": "<rootDir>/src/models/$1",
      "^modalPages(.*)$": "<rootDir>/src/modalPages/$1",
      "^pages(.*)$": "<rootDir>/src/pages/$1",
      "^stores(.*)$": "<rootDir>/src/stores/$1",
      "^services(.*)$": "<rootDir>/src/services/$1",
      "^themes(.*)$": "<rootDir>/src/themes/$1",
      "^ui(.*)$": "<rootDir>/src/ui/$1",
      "^utils(.*)$": "<rootDir>/src/utils/$1"
    }
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "proxy": "http://localhost:3001",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.{css,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
